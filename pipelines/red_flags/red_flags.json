{
    "pipeline": {
        "name": "red_flags"
    },
    "description": "A pipeline that produces the red flags / missing words file.",
    "transform": {
        "cmd": [
            "python3",
            "red_flags_pachyderm.py",
            "--inpath",
            "/pfs/word_alignment",
            "--ref-inpath",
            "/pfs/create_refs",
            "--outpath",
            "/pfs/out"
        ],
        "image": "woodwardmw/aqua-pipeline-red_flags-pachyderm:8448e56"
    },
    "input": {
        "cross": [
            {
                "group": [
                    {
                        "union": [
                            {
                                "pfs": {
                                    "repo": "word_alignment",
                                    "glob": "/(*)/word_scores.csv",
                                    "group_by": "($1)"
                                }
                            },
                            {
                                "pfs": {
                                    "repo": "word_alignment",
                                    "glob": "/(*)/meta.json",
                                    "group_by": "($1)"
                                }
                            }
                        ]
                    }
                ]
            },
            {
                "pfs": {
                    "repo": "create_refs",
                    "glob": "/"
                }
            }
        ]
    }
}