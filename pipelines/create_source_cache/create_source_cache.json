{
    "pipeline": {
        "name": "create_source_cache"
    },
    "description": "A pipeline that takes source input files and forwards them together with their index-cache file.",
    "transform": {
        "cmd": [
            "python3",
            "create_cache.py",
            "--source-dir",
            "/pfs/sources"
        ],
        "image": "woodwardmw/aqua-pipeline-word-alignment-pachyderm:36"
    },
    "input": {
        "pfs": {
            "repo": "sources",
            "glob": "/*"
        }
    }
}
